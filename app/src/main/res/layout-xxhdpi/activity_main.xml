<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:background="#ffffff"
    tools:context="autobusibihupdate.autobusibihupdate.MainActivity">

    <TextView
        android:text="AUTOBUSI BIH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <ImageView
        app:srcCompat="@drawable/internationalimg"
        android:id="@+id/international"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/cityTraffic"
        android:layout_toRightOf="@+id/transport"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <ImageView
        app:srcCompat="@drawable/ctiytrafficappimg"
        android:id="@+id/cityTraffic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/aboutappimg"
        android:id="@+id/about"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cityTraffic"
        android:layout_toStartOf="@+id/cityTraffic" />

    <ImageView
        app:srcCompat="@drawable/contactinfimg"
        android:id="@+id/contact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/cityTraffic"
        android:layout_toRightOf="@+id/transport"
        android:layout_toEndOf="@+id/transport" />

    <ImageView
        app:srcCompat="@drawable/transportersimg"
        android:id="@+id/transport"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about" />
</RelativeLayout>