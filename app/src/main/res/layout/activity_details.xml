<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alenmalik.autobusibih.DetailsActivity"
    android:background="#ff8a65">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/route_rl_layoit">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromCityId_txt"
            android:hint="Iz grada:"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/blackColor"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:hint="U grad:"
            android:id="@+id/toCityId_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/blackColor"
            android:textStyle="bold" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/route_rl_layoit"
        android:layout_above="@+id/open_map2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/route_rl_layoit2"
        android:layout_below="@+id/route_rl_layoit">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_hours2"
            android:listSelector="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
    </HorizontalScrollView>

    <Button
        android:text="PRIKAÅ½I NA MAPI"
        android:layout_height="wrap_content"
        android:id="@+id/open_map2"
        android:elevation="0dp"
        android:background="@drawable/shape"
        android:layout_width="120dp"
        android:layout_marginLeft="101dp"
        android:layout_marginStart="101dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp" />

    <TextView
        android:text="Cijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/open_map2"
        android:layout_toEndOf="@+id/open_map2"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/cijena_txt_city" />


</RelativeLayout>
