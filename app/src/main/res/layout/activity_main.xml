<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030303"
    tools:context="com.alenmalik.autobusibih.MainActivity">


    <ImageButton
        android:id="@+id/aboutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:background="#030303"
        app:srcCompat="@drawable/onama"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/busStateId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/busStateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:background="#030303"
        app:srcCompat="@drawable/stanice"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/cityId"
        android:layout_alignStart="@+id/cityId"
        android:layout_marginBottom="100dp" />

    <ImageButton
        android:id="@+id/routeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:background="#030303"
        app:srcCompat="@drawable/ruta"
        android:layout_marginTop="171dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/aboutId"
        android:layout_alignStart="@+id/aboutId" />

    <ImageButton
        android:id="@+id/cityId"
        android:layout_column="0"
        android:layout_row="0"
        android:background="#030303"
        app:srcCompat="@drawable/grad"

        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/routeId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="IZABERITE Å½ELJENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:text="OPCIJU :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp" />


</RelativeLayout>
