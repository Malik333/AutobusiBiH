<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9b9a9c"
    tools:context="com.alenmalik.autobusibih.MainActivity">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp">

        <ImageButton
            android:id="@+id/busStateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="#9b9a9c"
            app:srcCompat="@drawable/busstate" />

        <ImageButton
            android:id="@+id/aboutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="#9b9a9c"
            app:srcCompat="@drawable/about" />

        <ImageButton
            android:id="@+id/routeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:background="#9b9a9c"
            app:srcCompat="@drawable/route" />

        <ImageButton
            android:id="@+id/cityId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#9b9a9c"
            app:srcCompat="@drawable/city"

            />


    </GridLayout>

    <TextView
        android:text="IZABERITE Å½ELJENU OPCIJU:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:textStyle="normal|italic" />


</RelativeLayout>
