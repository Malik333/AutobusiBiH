<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ImageView
        app:srcCompat="@drawable/transportersimg"
        android:id="@+id/transport"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="30dp"
        android:layout_width="80dp" />

    <ImageView
        app:srcCompat="@drawable/aboutappimg"
        android:id="@+id/about"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_width="80dp" />

    <TextView
        android:text="AUTOBUSI BIH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/internationalimg"
        android:id="@+id/international"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/cityTraffic"
        android:layout_toRightOf="@+id/transport"
        android:layout_toEndOf="@+id/transport"
        android:layout_width="80dp" />

    <ImageView
        app:srcCompat="@drawable/contactinfimg"
        android:id="@+id/contact"
        android:layout_height="100dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/cityTraffic"
        android:layout_alignLeft="@+id/international"
        android:layout_alignStart="@+id/international"
        android:layout_width="80dp" />

    <ImageView
        app:srcCompat="@drawable/ctiytrafficappimg"
        android:id="@+id/cityTraffic"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_width="80dp" />
</RelativeLayout>
