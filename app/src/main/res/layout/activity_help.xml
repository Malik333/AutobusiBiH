<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alenmalik.autobusibih.HelpActivity"
    android:background="@color/backgroundColorApp">

    <TextView
        android:text="POMOZITE NAM!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <TextView
        android:text="Pomozite nam u razvoju aplikacije slanjem redoslijeda vožnje sa cijenom ako ste u mogućnosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        android:layout_marginTop="15dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <TextView
        android:text="Molimo vas da informacije budu tačne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <TextView
        android:text="Hvala!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11"
        android:textColor="@color/blackColor"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Vaše ime:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/blackColor" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imeEdit"
        android:background="@drawable/rectshape"
        android:layout_marginTop="10dp"
        android:hint="Ime"
        android:layout_height="35dp" />

    <TextView
        android:text="Vaše prezime:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imeEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView13"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/prezimeEdit"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectshape"
        android:hint="Prezime" />

    <TextView
        android:text="Redoslijed vožnje sa cijenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prezimeEdit"
        android:id="@+id/textView14"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/redoslijedVoznjeEdit"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectshape" />

    <Button
        android:text="POŠALJI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/prezimeEdit"
        android:layout_alignEnd="@+id/prezimeEdit"
        android:id="@+id/posaljiBtn"
        android:background="@drawable/shape" />
</RelativeLayout>
