<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alenmalik.autobusibih.RouteActivity"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ruta5"
        android:id="@+id/imageView4"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/route_rl_layoit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <AutoCompleteTextView
            android:id="@+id/fromCityId"
            android:hint="Iz grada:"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/rectshape"
            android:layout_height="40dp"
            android:inputType="textPhonetic"
            android:layout_width="220dp" />

        <AutoCompleteTextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:hint="U grad:"
            android:id="@+id/toCityId_txt"
            android:background="@drawable/rectshape"
            android:layout_alignRight="@+id/fromCityId"
            android:layout_alignEnd="@+id/fromCityId"
            android:layout_height="40dp"
            android:inputType="textPhonetic"
            android:layout_width="220dp" />

        <Button
            android:text="PRIKAŽI"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchroute_bn"
            android:gravity="center"
             android:background="@drawable/shape"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/fromCityId"
            android:layout_toRightOf="@+id/fromCityId"
            android:layout_marginLeft="15dp" />

        <ImageButton android:id="@+id/cleartoCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_dark"
            android:layout_alignTop="@+id/toCityId_txt"
            android:layout_alignRight="@+id/toCityId_txt"
            android:layout_alignEnd="@+id/toCityId_txt" />

        <ImageButton android:id="@+id/clearfromCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_dark"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/searchroute_bn"
            android:layout_toStartOf="@+id/searchroute_bn" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/route_rl_layoit"
        android:layout_above="@+id/open_map">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/route_rl_layoit2"
        android:layout_below="@+id/route_rl_layoit">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_hours1"
            android:listSelector="@android:color/transparent"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    </HorizontalScrollView>

    <Button
        android:text="PRIKAŽI NA MAPI"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/open_map"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
