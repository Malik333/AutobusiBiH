<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_entry_screen_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alenmalik.autobusibih.EntryScreen_Activity"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/entryscreen"
        android:scaleType="centerCrop"/>

    <TextView
        android:text="Da bi aplikacija uspješno radila morate biti konektovani na internet."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/internet_txt"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:allowUndo="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_margin="30dp" />

    <TextView
        android:text="Autobusi BiH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autousi34_txt"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:allowUndo="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Dobro došli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/entry_screen_txt"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:allowUndo="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
