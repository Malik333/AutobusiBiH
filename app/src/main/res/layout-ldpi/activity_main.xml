<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <ImageView
        app:srcCompat="@drawable/aboutappimg"
        android:id="@+id/about"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        app:srcCompat="@drawable/ctiytrafficappimg"
        android:id="@+id/cityTraffic"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp" />

    <ImageView
        app:srcCompat="@drawable/transportersimg"
        android:id="@+id/transport"
        android:layout_below="@+id/international"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:text="AUTOBUSI BIH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

    <ImageView
        app:srcCompat="@drawable/contactinfimg"
        android:id="@+id/contact"
        android:layout_below="@+id/about"
        android:layout_toLeftOf="@+id/cityTraffic"
        android:layout_toStartOf="@+id/cityTraffic"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        app:srcCompat="@drawable/internationalimg"
        android:id="@+id/international"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/cityTraffic"
        android:layout_toLeftOf="@+id/cityTraffic"
        android:layout_toStartOf="@+id/cityTraffic" />
</RelativeLayout>


