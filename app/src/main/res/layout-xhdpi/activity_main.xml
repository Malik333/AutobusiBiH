<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:text="AUTOBUSI BIH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

    <ImageView
        app:srcCompat="@drawable/ctiytrafficappimg"
        android:id="@+id/cityTraffic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <ImageView
        app:srcCompat="@drawable/aboutappimg"
        android:id="@+id/about"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_above="@+id/contact"
        android:layout_toLeftOf="@+id/international"
        android:layout_toStartOf="@+id/international" />

    <ImageView
        app:srcCompat="@drawable/transportersimg"
        android:id="@+id/transport"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about"
        android:layout_marginBottom="15dp" />

    <ImageView
        app:srcCompat="@drawable/internationalimg"
        android:id="@+id/international"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_below="@+id/cityTraffic"
        android:layout_alignRight="@+id/cityTraffic"
        android:layout_alignEnd="@+id/cityTraffic" />

    <ImageView
        app:srcCompat="@drawable/contactinfimg"
        android:id="@+id/contact"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/cityTraffic"
        android:layout_toRightOf="@+id/about"
        android:layout_toEndOf="@+id/about" />
</RelativeLayout>