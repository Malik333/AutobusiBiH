<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutInt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".InternacionalTraffic">


    <TextView
        android:text="IZABERI DRŽAVU:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="OD GRADA:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView16"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/internationalSpinnerOdGrada"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/izaberDrzavuSpinner"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="IZABERI DAN:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/izaberDrzavuSpinner"
        android:layout_alignLeft="@+id/izaberDrzavuSpinner"
        android:layout_alignStart="@+id/izaberDrzavuSpinner"
        android:id="@+id/textView17"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:id="@+id/internationalSpinnerDan" />

    <TextView
        android:text="DO GRADA:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internationalSpinnerOdGrada"
        android:layout_alignLeft="@+id/internationalSpinnerOdGrada"
        android:layout_alignStart="@+id/internationalSpinnerOdGrada"
        android:id="@+id/textView20"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/internationalSpinnerDoGrada"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20" />

    <Button
        android:text="INFORMACIJE:"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/internationalSpinnerDoGrada"
        android:layout_centerHorizontal="true"
        android:id="@+id/internationalInfoBtn"
        android:background="@drawable/btn_shape" />

    <TextView
        android:text="Relacija:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internationalInfoBtn"
        android:layout_alignLeft="@+id/internationalSpinnerDan"
        android:layout_alignStart="@+id/internationalSpinnerDan"
        android:id="@+id/textView21"
        android:layout_marginTop="15dp"
        android:textStyle="bold|italic"
        android:textColor="@color/blackColor" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:id="@+id/internationalRelacija"
        android:textStyle="bold"
        android:textColor="@color/blackColor"
        android:layout_marginLeft="120dp" />

    <TextView
        android:text="Vrijeme polaska:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:id="@+id/textView23"
        android:textStyle="bold|italic"
        android:textColor="@color/blackColor"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignRight="@+id/internationalRelacija"
        android:layout_alignEnd="@+id/internationalRelacija"
        android:id="@+id/internationalVrijemePolaska"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <TextView
        android:text="Dan:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:id="@+id/textView26"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:textColor="@color/blackColor" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignLeft="@+id/internationalVrijemePolaska"
        android:layout_alignStart="@+id/internationalVrijemePolaska"
        android:id="@+id/internationalDan"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <TextView
        android:text="Dužina puta:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView26"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:id="@+id/textView28"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView28"
        android:layout_alignRight="@+id/internationalDan"
        android:layout_alignEnd="@+id/internationalDan"
        android:id="@+id/internationalDuzinaPuta"
        android:textStyle="normal|bold"
        android:textColor="@color/blackColor" />

    <TextView
        android:text="Linija:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignLeft="@+id/textView28"
        android:layout_alignStart="@+id/textView28"
        android:id="@+id/textView32"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic" />

    <TextView
        android:text="Cijena:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView32"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32"
        android:id="@+id/textView33"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView32"
        android:layout_alignLeft="@+id/internationalDuzinaPuta"
        android:layout_alignStart="@+id/internationalDuzinaPuta"
        android:id="@+id/internationalLinija"
        android:textStyle="normal|bold"
        android:textColor="@color/blackColor" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView33"
        android:layout_alignRight="@+id/internationalLinija"
        android:layout_alignEnd="@+id/internationalLinija"
        android:id="@+id/internationalCijena"
        android:textColor="@color/blackColor"
        android:textStyle="bold" />

    <TextView
        android:text="Prijevoznik:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView33"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33"
        android:id="@+id/textView36"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="bold|italic" />

    <TextView
        android:text="Stanica:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView36"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignStart="@+id/textView36"
        android:id="@+id/textView37"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackColor"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView36"
        android:layout_alignLeft="@+id/internationalCijena"
        android:layout_alignStart="@+id/internationalCijena"
        android:id="@+id/internationalPrijevoznik"
        android:textColor="@color/blackColor"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView37"
        android:layout_alignLeft="@+id/internationalPrijevoznik"
        android:layout_alignStart="@+id/internationalPrijevoznik"
        android:id="@+id/internationalStanica"
        android:textColor="@color/blackColor"
        android:textStyle="normal|bold" />
</RelativeLayout>
