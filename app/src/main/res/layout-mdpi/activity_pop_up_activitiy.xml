<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blackColor"
    tools:context="com.alenmalik.autobusibih.PopUpActivitiy">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_popup"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grad:"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:id="@+id/gradIspis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView22"
                android:layout_centerHorizontal="true"
                android:textColor="#fff176"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/Adresa:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gradIspis"
                android:layout_marginTop="15dp"
                android:text="Adresa:"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adresaIspis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Adresa:"
                android:textStyle="bold"
                android:textColor="#fff176"
                android:layout_marginTop="5dp"/>



            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adresaIspis"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="Kontakt telefon:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telefonIspis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff176"
                android:layout_below="@+id/textView29"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>



            <Button
                android:id="@+id/odvediDoStaniceBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_shape"
                android:padding="10dp"
                android:text="ODVEDI ME DO STANICE"
                android:layout_below="@+id/telefonIspis"
                />
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
